<% include head %>

<div class="container">
    <div class="row">
        <div class="container">
            <h1 style="text-align: center;">Edit <%= allCampground.name %></h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= allCampground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= allCampground.name %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= allCampground.price %>"
                        min="0.01" step="0.01" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= allCampground.image %>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]"
                        value="<%= allCampground.description %>" />
                </div>
                <button class="btn btn-primary btn-block">Submit</button>
                <div class="form-group">
                    <a href="/campgrounds">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
<% include foot %>